<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Home.firstFragment">
    <Button
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/btntbr3"
        android:text="اتبرع عن طري مشاهدة الاعلانات  "
        android:textColor="@color/white"
        android:textSize="30dp"/>
    <View
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:background="#EE8711"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <TextView
        android:paddingRight="16dp"
        android:textColor="#EE8711"
        android:textSize="30sp"
        android:layout_gravity="end"
        android:text="برنامج ذكاة المال "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:paddingTop="8dp"
        android:paddingRight="16dp"
        android:textColor="#42413F"
        android:textSize="24sp"
        android:layout_gravity="end"
        android:text="@string/zakah_elmal_7adis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:paddingTop="8dp"
        android:paddingRight="16dp"
        android:textColor="#42413F"
        android:textSize="20sp"
        android:layout_gravity="end"
        android:text="@string/zakat_elmal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>