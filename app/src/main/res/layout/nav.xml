<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="left"
    >

    <Button
        android:id="@+id/T"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/btntbr3"
        android:text="اتبرع عن طري مشاهدة الاعلانات  "
        android:textColor="@color/white"
        android:textSize="30dp"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/y"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginTop="30dp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/T" />

                    <!--Home-->
    <TextView
        android:id="@+id/N_Home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginRight="48dp"
        android:text="الرئيسيه"
        android:textColor="@color/colorPrimary"
        android:textSize="45dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/y" />

    <ImageView
        android:id="@+id/D_H"
        android:layout_width="30dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="5dp"
        android:src="@drawable/down"
        app:layout_constraintRight_toLeftOf="@id/N_Home"
        app:layout_constraintTop_toBottomOf="@id/y" />

    <ImageView
        android:id="@+id/img_H"
        android:layout_width="30dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_home"
        app:layout_constraintLeft_toRightOf="@id/N_Home"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/y" />

                        <!--About_us-->


    <TextView
        android:id="@+id/N_About"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="عن 57357"
        android:layout_marginRight="48dp"
        android:textColor="@color/colorPrimary"
        android:textSize="45dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/N_Home" />

    <ImageView
        android:id="@+id/D_A"
        android:layout_width="30dp"
        android:layout_height="50dp"
        android:layout_marginTop="11dp"
        android:layout_marginRight="5dp"
        android:src="@drawable/down"
        app:layout_constraintRight_toLeftOf="@id/N_About"
        app:layout_constraintTop_toBottomOf="@id/D_H" />
    <ImageView
        android:id="@+id/img_A"
        android:layout_width="30dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/nurse"
        app:layout_constraintLeft_toRightOf="@id/N_About"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_H" />


                       <!--Dabartmant-->


    <TextView
        android:id="@+id/N_Dabaret"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="الاقسـام "
        android:textColor="@color/colorPrimary"
        android:textSize="45dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/N_About" />

    <ImageView
        android:id="@+id/D_D"
        android:layout_width="30dp"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="3dp"
        android:src="@drawable/down"
        app:layout_constraintRight_toLeftOf="@id/N_Dabaret"
        app:layout_constraintTop_toBottomOf="@id/D_A" />

    <ImageView
        android:id="@+id/img_D"
        android:layout_width="30dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/nurse"
        app:layout_constraintLeft_toRightOf="@id/N_About"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_H" />



                              <!--Tabro3at-->


    <TextView
        android:id="@+id/N_Tbar3at"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="تبـرعـات"
        android:textColor="@color/colorPrimary"
        android:textSize="45dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/N_Dabaret" />

    <ImageView
        android:id="@+id/D_T"
        android:layout_width="30dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="3dp"
        android:src="@drawable/down"
        app:layout_constraintRight_toLeftOf="@id/N_Tbar3at"
        app:layout_constraintTop_toBottomOf="@id/D_D" />


                               <!--Conact_Us-->


    <TextView
        android:id="@+id/N_Toasl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="تواصل معنا"
        android:textColor="@color/colorPrimary"
        android:textSize="45dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/N_Tbar3at" />

    <ImageView
        android:id="@+id/D_C"
        android:layout_width="30dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="4dp"
        android:src="@drawable/down"
        app:layout_constraintRight_toLeftOf="@id/N_Toasl"
        app:layout_constraintTop_toBottomOf="@id/D_T" />

</androidx.constraintlayout.widget.ConstraintLayout>